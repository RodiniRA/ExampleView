                             x:Name="FileFlyout"
                             Style="{DynamicResource FlyoutBackground}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="350"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <TabControl Grid.Row="0" TabStripPlacement="Left" Grid.Column="0">
                            <TabItem Header="Email" Width="200" Style="{DynamicResource FlyoutTabItemStyle}"/>
                            <TabItem Header="Reference Links" Width="200" Style="{DynamicResource FlyoutTabItemStyle}"/>
                            <TabItem Header="Admin Tools" Width="200" Style="{DynamicResource FlyoutTabItemStyle}"/>
                                <TabItem Header="Recent Activity" FontSize="8" Width="200" Style="{DynamicResource FlyoutTabItemStyle}"/>
                            <TabItem Header="Theme" Width="200" Style="{DynamicResource FlyoutTabItemStyle}">
                                <StackPanel>
                                    <Button Click="SetDefaultTheme">
                                        <StackPanel>
                                            <Rectangle Height="10" Width="20" Fill="#41B1E1"/>
                                            <TextBlock><Run Text="Blue"/></TextBlock>
                                        </StackPanel>
                                    </Button>
                                    <Button Click="DarkSkin_Click">
                                        <StackPanel>
                                            <Rectangle Height="10" Width="20" Fill="#535353"/>
                                            <TextBlock><Run Text="Dark"/></TextBlock>
                                        </StackPanel>
                                    </Button>
                                    <Button Click="GreenSkin_Click">
                                        <StackPanel>
                                            <Rectangle Height="10" Width="20" Fill="#238C23"/>
                                            <TextBlock><Run Text="Green"/></TextBlock>
                                        </StackPanel>
                                    </Button>
                                    <Button Click="GummiBearSkin_Click">
                                        <StackPanel>
                                            <Rectangle Height="10" Width="20" Fill="#ff4a1d"/>
                                            <TextBlock><Run Text="Gummi Bear"/></TextBlock>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="Style" Width="200" Style="{DynamicResource FlyoutTabItemStyle}"/>
                            <TabItem Header="About" Width="200" Style="{DynamicResource FlyoutTabItemStyle}"/>
                        </TabControl>

                        <Button Content="Close" Grid.Row="2" Click="CloseFlyout_Click" Width="75" HorizontalAlignment="Center" Margin="10"/>
                    </StackPanel>
                </Grid>


            </Controls:Flyout>
        </Controls:FlyoutsControl>
